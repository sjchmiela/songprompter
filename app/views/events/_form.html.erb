<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="relative"><%= f.text_field :name, :placeholder => "Nazwa wydarzenia", :class => :title %><%= f.submit  :value => "Zapisz", :class => "big-screen" %></div>
  <div style="margin-left: 15%; margin-top: 1rem;"><%= f.label :date, "W dniu: " %><%= f.text_field :date, class: :datepicker, placeholder: "Data" %></div>
  <section class="song-list"><h2>Lista piosenek</h2>
  <ul class="">
  <% songs.each do |song| %>
    <li class="song-desc song-in-list"><h3><%= song.name %></h3><p><%= raw song.text.split("\n")[0..1].join("<br />") %>â€¦</p><span onclick="javascript:up(this)">Up</span><a href="">Down</a><a href="">Remove</a></li>
  <% end %>
  </ul>
  <div class="song-desc song-in-list"><h3>Nowa piosenka</h3></div>
  <%= f.submit  :value => "Zapisz", :class => "small-screen" %>
<% end %>
<script>
function up(el) {
    console.log($(el).parent());
    var current = $(el).parent();
    var previous = current.prev();
    if($.isEmptyObject($(previous))) {
      return;
    }
    else {
      console.log('lets party');
      $(previous).before(current);
      $(current).remove();
    }
  }
</script>